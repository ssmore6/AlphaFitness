<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shwetamore.alphafitness.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:text="Shweta More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Average/Weekly"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView9"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="175dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Distance"
                android:layout_height="30dp" />

            <TextView
                android:text="0.0"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView13"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="00:00:00"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView12"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Workouts"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView15"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="0"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView14"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Calories Burned"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView19"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="0"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="All Time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView20"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Distance"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView23"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView22"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView26"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView25"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Workouts"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView28"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:id="@+id/textView27"
                android:layout_height="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Calories Burned"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView30"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:text="TextView"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView29"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </TableRow>
    </TableLayout>

    <EditText
        android:layout_width="75dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Enter weight"
        android:layout_alignBottom="@+id/textView32"
        android:layout_toRightOf="@+id/textView32"
        android:layout_toEndOf="@+id/textView32"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_height="20dp" />

    <TextView
        android:text="Weight(lbs):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_marginTop="22dp" />

    <EditText
        android:inputType="text"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_width="75dp"
        android:hint="Enter gender"
        android:layout_height="20dp"
        android:layout_above="@+id/textView32"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView31"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

</RelativeLayout>
